<UserControl x:Class="CPSC_481_PROJECT.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_PROJECT"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">



    <!--TabControl Style derived from the following source: http://www.wpf-tutorial.com/tabcontrol/styling-the-tabitems/ -->
    <Grid Background="White">
        <TabControl x:Name="MainPageTabControl" HorizontalAlignment="Left" Height="720" Width="1280" >
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="TabItemPanel">
                                    <ContentPresenter x:Name="TabItemContent"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      ContentSource="Header"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="TabItemPanel" Property="Background" Value="Yellow"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="TabItemPanel" Property="Background" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="GridViewColumnHeader">
                                <Grid x:Name="GridViewColumnHeader" Background="White">
                                    <Border BorderBrush="DimGray" BorderThickness="1">
                                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" />
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>


                <Style TargetType="ComboBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Grid>
                                    <Border BorderBrush="Black" BorderThickness="1">
                                        <ContentPresenter x:Name="ComboBoxItemContent" Content="{TemplateBinding Content}" />
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="PROFILE" Width="640" Height="76" FontSize="36" >
                <Grid>
                    <TextBlock x:Name="ProfileUsername" Height="40" TextWrapping="Wrap" Text="Username" Margin="57,9,1017,587"/>
                    <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200" Margin="57,54,0,0" Initialized="ProfileImage_Initialized">
                    </Image>
                    <Button x:Name="ChangeProfilePicButton" Content="Change Profile Picture" RenderTransformOrigin="-4.114,0.2" Margin="57,259,1017,337" FontSize="18"/>
                    <TextBox x:Name="ProfileStatusTextBox" TextWrapping="Wrap" Text="Status Message" Margin="57,319,1017,277" FontSize="16" BorderBrush="Black" VerticalAlignment="Center" Height="40"/>

                    <ComboBox x:Name="RoleComboBox" Margin="57,379,1017,217" BorderBrush="Black" FontSize="24">
                    </ComboBox>

                    <ComboBox x:Name="HeroComboBox" Height="35" Margin="57,444,1017,157" FontSize="24">
                    </ComboBox>

                    <ComboBox x:Name="GameModeComboBox" HorizontalAlignment="Left" Margin="57,499,0,0" VerticalAlignment="Top" Width="200" Height="40" FontSize="24">
                    </ComboBox>


                    <TabControl x:Name="ProfileTabControl" HorizontalAlignment="Left" Height="639" Margin="317,-3,0,0" VerticalAlignment="Top" Width="957" BorderThickness="0">
                        <TabItem Header="STATS" Width="319">
                            <Grid Background="#FFE5E5E5">
                                <ListView x:Name="ProfileStatsListView" HorizontalAlignment="Left" Height="560" VerticalAlignment="Top" Width="943" FontSize="24" Background="LightGray" >

                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Overall" Width="318">

                                            </GridViewColumn>
                                            <GridViewColumn Header="Heroes" Width="319"/>
                                            <GridViewColumn Header="Last Played" Width="310"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem Header="FRIENDS" HorizontalAlignment="Right" Width="319">
                            <Grid Background="LightGray">
                                <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="507" Margin="10,53,0,0" VerticalAlignment="Top" Width="303">
                                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="155" VerticalAlignment="Top" Width="293"/>
                                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="155" VerticalAlignment="Top" Width="293"/>
                                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="155" VerticalAlignment="Top" Width="293"/>
                                </ListBox>
                                <TextBlock x:Name="FriendListText" HorizontalAlignment="Left" Margin="23,0,0,0" TextWrapping="Wrap" Text="Friend List" VerticalAlignment="Top" FontSize="36" Width="270"/>
                                <TextBlock x:Name="FriendStatsText" HorizontalAlignment="Left" Margin="333,0,0,0" TextWrapping="Wrap" Text="Friend Stats" VerticalAlignment="Top"/>
                                <ListView x:Name="FriendStatsListView" HorizontalAlignment="Left" Height="507" Margin="318,53,0,0" VerticalAlignment="Top" Width="625" FontSize="24" Background="#FFE5E5E5">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Overall" Width="208"/>
                                            <GridViewColumn Header="Heroes" Width="207" />
                                            <GridViewColumn Header="Last Played" Width="207"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem Header="TEAM"  HorizontalAlignment="Left" Width="315">
                            <Grid Background="LightGray">

                                <ListView x:Name="TeamListView" HorizontalAlignment="Left" Height="385" Margin="10,25,0,0" VerticalAlignment="Top" Width="918" Background="#FFE5E5E5" BorderBrush="Black">
                                    <ListView.Resources>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                                        </Style>
                                    </ListView.Resources>
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Team Name" Width="933" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <Button x:Name="DeleteTeamButton" Content="Delete/Leave Team" HorizontalAlignment="Left" Margin="743,25,0,0" VerticalAlignment="Top" Width="185" RenderTransformOrigin="1.333,0.385" Height="55" FontSize="16"/>
                            </Grid>
                        </TabItem>
                    </TabControl>

                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="200" Margin="57,54,0,0" VerticalAlignment="Top" Width="200"/>

                </Grid>



            </TabItem>
            <TabItem Header="SEARCH" Width="635" Height="76" FontSize="36">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Grid Name="RadioToggleButtonGrid">
                                            <Border BorderBrush="Black" BorderThickness="1">
                                                <ContentPresenter x:Name="RadioToggleButton"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="RadioToggleButtonGrid" Property="Background" Value="Yellow"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter TargetName="RadioToggleButtonGrid" Property="Background" Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>
                    <TabControl x:Name="SearchTabControl" HorizontalAlignment="Left" Height="616" Margin="10,0,0,0" VerticalAlignment="Top" Width="1242" BorderThickness="0">
                        <TabItem Header="SOLO" Width="626">
                            <Grid x:Name="___No_Name_" Background="LightGray">
                                <RadioButton x:Name="SoloSearchQuickplayToggle" Content="   QUICKPLAY" HorizontalAlignment="Left" Margin="385,22,0,0" VerticalAlignment="Top" Width="240"/>
                                <RadioButton x:Name="SoloSearchRankedToggle" Content="     RANKED" HorizontalAlignment="Left" Margin="625,22,0,0" VerticalAlignment="Top" Width="240"/>
                                <ComboBox x:Name="SoloSearchRoleComboBox" HorizontalAlignment="Left" Margin="525,92,0,0" VerticalAlignment="Top" Width="200" Height="40" RenderTransformOrigin="0.458,-0.111" BorderBrush="Black" FontSize="24"/>
                                <ComboBox x:Name="SoloSearchHeroComboBox" HorizontalAlignment="Left" Margin="780,92,0,0" VerticalAlignment="Top" Width="200" Height="40" BorderBrush="Black" FontSize="24" RenderTransformOrigin="0.475,-0.125"/>
                                <TextBlock x:Name="SearchFilterText" HorizontalAlignment="Left" Height="40" Margin="355,92,0,0" TextWrapping="Wrap" Text="Filter By:" VerticalAlignment="Top" Width="165" FontSize="24"/>
                                <TextBox x:Name="SoloSearchInput" HorizontalAlignment="Left" Height="40" Margin="525,158,0,0" TextWrapping="Wrap" Text=" Search by Username..." VerticalAlignment="Top" Width="260" RenderTransformOrigin="0.371,0.375" FontSize="22" FontStyle="Italic"/>
                                <Button x:Name="SoloSearchButton" Content="Search" HorizontalAlignment="Left" Margin="785,157,0,0" VerticalAlignment="Top" Width="80" Height="41" FontSize="24"/>
                                <TextBlock x:Name="SearchRoleTextBlock" HorizontalAlignment="Left" Margin="540,92,0,0" TextWrapping="Wrap" Text="Role..." VerticalAlignment="Top" Height="40" Width="100" FontSize="24" RenderTransformOrigin="0.85,0.625"/>
                                <TextBlock x:Name="SearchHeroTextBlock" HorizontalAlignment="Left" Margin="800,92,0,0" TextWrapping="Wrap" Text="Hero..." VerticalAlignment="Top" Height="40" Width="85" FontSize="24" RenderTransformOrigin="0.647,0.5"/>
                                <ListView x:Name="SoloSearchListView" HorizontalAlignment="Left" Height="315" Margin="145,222,0,0" VerticalAlignment="Top" Width="960" FontSize="24" Background="#FFE5E5E5">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Username" Width="480"/>
                                            <GridViewColumn Header="Role" Width="240"/>
                                            <GridViewColumn Header="Hero" Width="240"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <Image x:Name="DefenseIcon" Source="pack://application:,,,/Images/DefenseIcon.png" RenderOptions.BitmapScalingMode="Fant" HorizontalAlignment="Left" Height="50" Margin="255,157,0,0" VerticalAlignment="Top" Width="50"/>
                                <Image x:Name="TankIcon" Source="pack://application:,,,/Images/TankIcon.png" RenderOptions.BitmapScalingMode="Fant"  HorizontalAlignment="Left" Height="50" Margin="335,157,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.75,0.083"/>
                                <Image x:Name="OffenseIcon" Source="pack://application:,,,/Images/OffenseIcon.png" RenderOptions.BitmapScalingMode="Fant" HorizontalAlignment="Left" Height="50" Margin="175,157,0,0" VerticalAlignment="Top" Width="50"/>
                                <Image x:Name="SupportIcon" Source="pack://application:,,,/Images/SupportIcon.png" RenderOptions.BitmapScalingMode="Fant"  HorizontalAlignment="Left" Height="50" Margin="415,158,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.75,0.083"/>
                                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="175,139,0,0" TextWrapping="Wrap" Text="Offense        Defense          Tank           Support" VerticalAlignment="Top" Height="19" FontSize="14"/>

                            </Grid>
                        </TabItem>
                        <TabItem Header="GROUP" Width="612">
                            <Grid Background="LightGray">
                                <RadioButton x:Name="GroupSearchQuickplayToggle" Content="   QUICKPLAY" HorizontalAlignment="Left" Margin="385,22,0,0" VerticalAlignment="Top" Width="240"/>
                                <RadioButton x:Name="GroupSearchRankedToggle" Content="     RANKED" HorizontalAlignment="Left" Margin="625,22,0,0" VerticalAlignment="Top" Width="240"/>
                                <ListView x:Name="GroupSearchListView" HorizontalAlignment="Left" Height="350" Margin="145,187,0,0" VerticalAlignment="Top" Width="960" FontSize="24" Background="#FFE5E5E5">

                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Team Name" Width="320"/>
                                            <GridViewColumn Header="Members" Width="640"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="40" Margin="305,107,0,0" TextWrapping="Wrap" Text="Search By Team Name..." VerticalAlignment="Top" Width="260" FontSize="22" FontStyle="Italic"/>
                                <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="565,107,0,0" VerticalAlignment="Top" Width="80" Height="40" FontSize="22"/>
                            </Grid>

                        </TabItem>
                    </TabControl>

                </Grid>


            </TabItem>


        </TabControl>

    </Grid>
</UserControl>

    